<glimmer-repl>
  {{#if isLoaded}}
    <div class="pane editor">
      <header class="header">
        <div class="editor-actions">
          <button class="button" onclick={{action createNewComponent}}>
            Add Component
          </button>
          <button class="button" onclick={{action createNewHelper}}>
            Add Helper
          </button>
          <button class="button button--icon" id="header-button-more" onclick={{action showMore}}>
            <img src="images/more.svg">
          </button>
        </div>
        <span class="glimmerjs-com">
          <a href="https://glimmerjs.com" class="logo" title="glimmerjs.com"></a>
          <a href="https://glimmerjs.com/guides/installing">Guides</a>
          <a href="https://glimmerjs.com/api">API Docs</a>
          <a href="https://github.com/glimmerjs">Github</a>
        </span>
      </header>
      {{#each components key="id" as |component|}}
        <div class="component">
          <h2 class="component-name">
              <span class="bracket">&lt;</span>
              {{~#if component.isEditable~}}
                <EditableTitle @value={{component.name}} @onChange={{action componentNameDidChange component}} />
              {{~else~}}
                {{component.name}}
              {{~/if~}}
              <span class="bracket">&gt;</span>
              {{#if component.isEditable}}
                <RemoveButton @onClick={{action removeComponent component}} />
              {{/if}}
          </h2>
          {{#if component.template}}
          <div class="file template">
            <h3 class="file-name">template.hbs</h3>
            <CodeEditor @file={{component.template}} />
          </div>
          {{/if}}

          {{#if component.component}}
            <div class="file implementation">
              <h3 class="file-name">
                component.ts
                <RemoveButton @onClick={{action removeComponentImplementation component}} />
              </h3>
              <CodeEditor @file={{component.component}} />
            </div>
          {{else}}
            <div class="file add-implementation">
              <button class="button" onclick={{action addComponentImplementation component}}>
                Add TypeScript
              </button>
            </div>
          {{/if}}
        </div>
      {{/each}}

      {{#each helpers key="id" as |helper|}}
        <div class="helper">
          <h2 class="helper-name">
              <span class="bracket">\{{</span>
              {{~#if helper.isEditable~}}
                <EditableTitle @value={{helper.name}} @onChange={{action helperNameDidChange helper}} />
              {{~else~}}
                {{component.name}}
              {{~/if~}}
              <span class="bracket">}}</span>
              {{#if helper.isEditable}}
                <RemoveButton @onClick={{action removeHelper helper}} />
              {{/if}}
          </h2>
        {{#if helper.helper}}
          <div class="file implementation">
            <h3 class="file-name">
              helper.ts
            </h3>
            <CodeEditor @file={{helper.helper}} />
          </div>
        {{/if}}
        </div>
      {{/each}}
    </div>

    <div class="pane vm">
      <Sandbox @fs={{fs}} @onUnknownComponent={{action saveUnknownComponent}} />
    </div>

    {{#if isVisualizerShowing}}
      <Visualizer @fs={{fs}} />
    {{/if}}

    <button class="toggle-visualizer" onclick={{action toggleVisualizer}}>Ï€</button>
  {{else}}
    <div class="pane editor">
      <div class="loading">
        <span>Loading the Playground...</span>
      </div>
    </div>
    <div class="pane vm">
    </div>
  {{/if}}

  {{#if shareIsVisible}}
    <OverlayKeyBindings @hide={{action hideShare}} @eventKey="share-overlay">
      <OverlayUI @title="Share Project" @hide={{action hideShare}} @rootClass="share-overlay">
        <Share @download={{action download}} @loading={{jsZipIsLoading}} />
      </OverlayUI>
    </OverlayKeyBindings>
  {{/if}}

  {{#if welcomeIsVisible}}
    <OverlayKeyBindings @hide={{action hideWelcome}} @eventKey="welcome-overlay">
      <OverlayUI @hide={{action hideWelcome}} @rootClass="welcome-overlay">
        Welcome Overlay
      </OverlayUI>
    </OverlayKeyBindings>
  {{/if}}

  {{#if moreIsVisible}}
    <OverlayKeyBindings @hide={{action hideMore}} @eventKey="more-actions">
      <div class="overlay more-actions">
        <div class="overlay-background overlay-background--transparent" onclick={{action hideMore}}></div>
        <TargetPosition @id="header-button-more" as |position|>
          <div class="overlay-window animation-fade-in" style={{overlay-more-styles position}}>
            <button class="button" onclick={{action hideMore (action showShare)}}>Share Project</button>
            <button class="button" onclick={{action hideMore (action showWelcome)}}>Load Project</button>
          </div>
        </TargetPosition>
      </div>
    </OverlayKeyBindings>
  {{/if}}
</glimmer-repl>
